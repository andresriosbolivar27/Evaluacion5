<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.evaluacion5">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.evaluacion5.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.evaluacion5.activities.UltimasMascotasFavoritas"
            android:parentActivityName="com.example.evaluacion5.activities.MainActivity">
        </activity>
        <activity
            android:name="com.example.evaluacion5.activities.ActivityAcercaDe"
            android:parentActivityName="com.example.evaluacion5.activities.MainActivity">

            <!-- soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.evaluacion5.activities.MainActivity" />
        </activity>
        <activity android:name="com.example.evaluacion5.activities.ActivityContacto"
            android:parentActivityName="com.example.evaluacion5.activities.MainActivity">

            <!-- soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.evaluacion5.activities.MainActivity" />
        </activity>
        <!--Soporte para 4.0-->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.evaluacion5.activities.MainActivity">
        </meta-data>
    </application>

</manifest>